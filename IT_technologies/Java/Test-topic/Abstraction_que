StringType extends Type{
reverse(String arr){
 for(int i=arr.length-1;i>0;i--){
    System.out.print(arr[i]);
}

}
   System.out.print("Reversed String: "+arr);
}
IntegerType extends Type{

   reverse(int digi){ 
