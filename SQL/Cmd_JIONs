CREATE TABLE BOARDINGPASS
(
BOARDINGPASS_ID NUMBER(10) PRIMARY KEY,
FLIGHT_ID NUMBER(10),
PASSENGER_ID NUMBER(10) REFERENCES PASSENGER(PASSENGER_ID),
MEAL VARCHAR2(15)
);

